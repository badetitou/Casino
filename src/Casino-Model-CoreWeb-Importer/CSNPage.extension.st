Extension { #name : #CSNPage }

{ #category : #'*Casino-Model-CoreWeb-Importer' }
CSNPage >> addWidget: aWidget [
	self businessPage
		ifEmpty: [ self businessPage
				add:
					(self mooseModel add: (CSNBusinessPage new
						name: 'autoGenerated';
						addWidget: aWidget)) ]
		ifNotEmpty: [ (self businessPage at: 1) addWidget: aWidget ]
]

{ #category : #'*Casino-Model-CoreWeb-Importer' }
CSNPage >> layout [

	"A page does not have layout, so it relies on the layout of a business page"

	^ self businessPage
		  ifNotEmpty: [ :aBusinessPage | aBusinessPage anyOne layout ]
		  ifEmpty: [ super layout ]
]

{ #category : #'*Casino-Model-CoreWeb-Importer' }
CSNPage >> layout: aLayout [

	self businessPage
		ifEmpty: [ 
			self businessPage add: (self mooseModel add: (CSNBusinessPage new
						  name: 'autoGenerated';
						  layout: aLayout)) ]
		ifNotEmpty: [ (self businessPage at: 1) layout: aLayout ]
]
